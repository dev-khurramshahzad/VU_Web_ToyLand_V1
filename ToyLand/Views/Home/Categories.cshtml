@model IEnumerable<ToyLand.Models.Category>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="#"><i class="fa fa-home"></i> Home</a>
                    <span> Categories</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section Begin -->
<!-- Banner Section Begin -->
<div class="banner-section spad">
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4">
                    <a href="/Home/ViewToys/@item.CatID">
                        <div class="single-banner img-thumbnail">
                            <img class="img-thumbnail" src="~/Content/AppData/@item.Image" alt="">
                            <div class="inner-text">
                                <h4 style="background-color:#000000bc;color:white">@item.Name</h4>
                            </div>
                        </div>
                    </a>
                </div>

            }
        </div>
    </div>
</div>
<!-- Banner Section End -->