@model IEnumerable<ToyLand.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>
    Categories List
    <a href="/Adm_Categories/Create" class="btn btn-primary pull-right">Add Category</a>
</h2>
<hr />


<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
       <img src="~/Content/AppData/@item.Image" width="100" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Details)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Status)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.CatID }, new { @class = "btn btn-warning btn-sm" })
        @Html.ActionLink("Details", "Details", new { id = item.CatID }, new { @class = "btn btn-success btn-sm" })
        @Html.ActionLink("Delete", "Delete", new { id = item.CatID }, new { @class = "btn btn-danger btn-sm" })
    </td>
</tr>
}

</table>
